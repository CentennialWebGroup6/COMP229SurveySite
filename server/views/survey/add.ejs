<%- include ../partials/header.ejs  %> 
<%- include ../partials/main_nav.ejs %> 

<!--Content for the Add Page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Survey Title</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Survey Title"
                    name="title" required>
                </div>

                <div class="form-group">
                    <label for="questOneTextField">Question 1:</label>
                    <input type="text" class="form-control"
                    id="questOneTextField"
                    placeholder="Enter the 1st Question"
                    name="question1" required>
                </div>

                <div class="form-group">
                    <label for="questTwoTextField">Question 2:</label>
                    <input type="text" class="form-control"
                    id="questTwoTextField"
                    placeholder="Enter the 2nd Question"
                    name="question2" required>
                </div>

                <div class="form-group">
                    <label for="questThreeTextField">Question 3:</label>
                    <input type="text" class="form-control"
                    id="questThreeTextField"
                    placeholder="Enter the 3rd Question"
                    name="question3" required>
                </div>

                <div class="form-group">
                    <label for="questFourTextField">Question 4:</label>
                    <input type="text" class="form-control"
                    id="questFourTextField"
                    placeholder="Enter the 4th Question"
                    name="question4" required>
                </div>

                <div class="form-group">
                    <label for="questFiveTextField">Question 5:</label>
                    <input type="text" class="form-control"
                    id="questFiveTextField"
                    placeholder="Enter the 5th Question"
                    name="question5" required>
                </div>

                <div class="form-group">
                    <p>Select Survey Type:</p>
                    <input type="radio" id="mcqRadioField" value="Multiple Choice Question" name="type" checked required>
                    <label for="mcqRadioField">Multiple Choice Question</label><br>
                    <input type="radio" id="descriptionRadioField" value="Short Answer Question" name="type" required>
                    <label for="descriptionRadioField">Short Answer Question</label>
                    
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>

                    <a href="/survey-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>
            </form>
        </div>
    </div>
</div>


<%- include ../partials/footer.ejs %> 